package test;

import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.Insets;
import java.awt.LayoutManager;
import java.awt.Point;

import javax.swing.BorderFactory;
import javax.swing.JPanel;
import javax.swing.border.Border;

public class ResizablePanel extends JPanel {
	
	private ResizableBorder resizable_border;
	private Insets border_insets;

	public ResizablePanel() {
		setBounds(50, 50, 200, 150);
		
		setLayout(new BorderLayout());
		
		setMinimumSize(new Dimension(100, 100));
		
		resizable_border = new ResizableBorder();
		
		setBorder(resizable_border);
		
		border_insets = resizable_border.getBorderInsets(this);
		
		ResizeListener resize_listener = new ResizeListener(border_insets);
		
		addMouseListener(resize_listener);
		addMouseMotionListener(resize_listener);
		
//		ResizeAndDragListener resize_and_drag_listener = new ResizeAndDragListener(border_insets);
//				
//		addMouseListener(resize_and_drag_listener);
//		addMouseMotionListener(resize_and_drag_listener);
	}
	
	@Override
	public void setBounds(int x, int y, int w, int h) {
		super.setBounds(x, y, w, h);
	}
	
	public Point getTopLeftOnScreen() {
		int x = getLocationOnScreen().x; //+ border_insets.left;
		int y = getLocationOnScreen().y; //+ border_insets.top;
		
		return new Point(x, y);
	}
	
	public Point getTopRightOnScreen() {
		int x = getLocationOnScreen().x + getWidth(); //- border_insets.right;
		int y = getLocationOnScreen().y; //+ border_insets.top;
		
		return new Point(x, y);
		
	}
	
	public Point getBottomLeftOnScreen() {
		int x = getLocationOnScreen().x; //+ border_insets.left;
		int y = getLocationOnScreen().y + getHeight(); //- border_insets.bottom;
		
		return new Point(x, y);
	}
	
	public Point getBottomRightOnScreen() {
		int x = getLocationOnScreen().x + getWidth(); //-  border_insets.left;
		int y = getLocationOnScreen().y + getHeight(); //- border_insets.bottom;
		
		return new Point(x, y);
	}
	
	public int getLeftSideOnScreen() {
		return getLocationOnScreen().x;
	}
}
