package picasso2;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;

import javax.swing.BorderFactory;
import javax.swing.JPanel;
import javax.swing.JToolBar;
import javax.swing.border.Border;

/*PF: Draggable ToolBar that holds ToolButtons
 * Extends JToolBar
 */

public class PicassoToolBar extends JToolBar {

	public PicassoToolBar(String name) {
		super(name);
		
		/*PF: Create Background Panel
		 * and Button Panel
		 */
		JPanel background_panel = new JPanel(null);
		JPanel button_panel = new JPanel(new GridLayout(2, 4));
		
		//PF: Set bounds of button_panel
		button_panel.setBounds(10, 10, 50, 50);
		
		/*PF: Set Preferred Size of Background Panel
		 * **NOTE** It seems as though with Toolbars
		 * The width of the first component does not 
		 * matter
		 */
		background_panel.setPreferredSize(new Dimension(0, 100));
		
		//PF: Create black line border
		Border black_line_border = BorderFactory.createLineBorder(Color.BLACK);
		
		//PF: Set black line borders around panels
		background_panel.setBorder(black_line_border);
		button_panel.setBorder(black_line_border);
		
		//PF: Add Components together
		add(background_panel);
		background_panel.add(button_panel);
	}
	
}
