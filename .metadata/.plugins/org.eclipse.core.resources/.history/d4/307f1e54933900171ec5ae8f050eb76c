package picasso2;

import java.awt.Component;

import javax.swing.JScrollBar;
import javax.swing.JScrollPane;

public class PicassoScrollPane extends JScrollPane {

	public PicassoScrollPane(Component view) {
		super(view);

		 /*PF: Set vertical and horizontal 
		 * scroll bars to always visible
		 */
		setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		setHorizontalScrollBarPolicy(JScrollPane.HORIZONTAL_SCROLLBAR_ALWAYS);
		
		JScrollBar vertical_sb = getVerticalScrollBar();
		
		
		/*PF: Set new unit increments for 
		 * Vertical and Horizontal scroll bars
		 * This changes how quickly the scroll bar
		 * scrolls when pressing the arrows
		 * or scrolling the mouse wheel 
		 */
		getVerticalScrollBar().setUnitIncrement(7);
		getHorizontalScrollBar().setUnitIncrement(7);
		
		/*PF: Set new block increments for
		 * Vertical and Horizontal scroll bars
		 * This changes how quickly the scroll bar
		 * scrolls when pressing on the track
		 * (area the slider is not on)
		 */
		getVerticalScrollBar().setBlockIncrement(300);
		getHorizontalScrollBar().setBlockIncrement(300);
	}

}
